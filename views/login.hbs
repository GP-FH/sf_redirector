<div class="container">
  <div class="row">
  </div>
  <div class="row">
    <div class="col">
    </div>
    <div class="col">
      <div class="card">
        <div class="card-header">
          HQ Login
        </div>
        <div class="card-body">
          <form action="/login" method="post">
            <div class="form-group">
              <label for="usernameInput">Username</label>
              <input type="text" class="form-control" id="usernameInput" aria-describedby="usernameHelp" placeholder="Enter HQ username">
              <small id="usernameHelp" class="form-text text-muted">If you don't know what this is - talk to Marcelo. He might know.</small>
            </div>
            <div class="form-group">
              <label for="inputPassword">Password</label>
              <input type="password" class="form-control" id="inputPassword" placeholder="Password">
            </div>
            <div class="form-check">
            </div>
            <button type="submit" class="btn btn-primary">Log In</button>
          </form>
        </div>
      </div>
    </div>
    <div class="col">
    </div>
  </div>
</div>
